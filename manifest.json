{
  "manifest_version": 3,
  "name": "Auto Copy & Save Highlight",
  "version": "1.3",
  "description": "Automatically copies highlighted text, saves it, and shows it in a popup.",
  "permissions": ["activeTab", "storage","scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
